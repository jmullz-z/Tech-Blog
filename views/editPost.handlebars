<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">edit post</h2><hr>
  <form id ="edit-post-form">
    
    <div class='title mt-5' id="post-id" type="text" value={{post.id}}>
    <label for="post-title">post title:{{post.title}}</label>
  </div>
    
    <div>
        <label for="post-content">post content:</label>
      <input class="textarea" id="post-content" type="text" value="{{post.post_contents}}" />
    </div>
    
    <div class="is-pulled-right">
       created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{posts.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save post</button>
    <button type="button" class="button is-danger" id= "delete-post-btn">Delete post</button>
  </form>
</article>

{{comments post.comments}}

<script src="/javascript/comment.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="'/javascript/edit-post.js"></script>